{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PinIt",
  "version": "1.0.0",
  "identifier": "com.saqla.pin-it",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "PinIt",
        "width": 340,
        "height": 460,
        "minWidth": 340,
        "maxWidth": 340,
        "minHeight": 400,
        "maxHeight": 700,
        "resizable": true,
        "maximizable": false,
        "visible": false,
        "decorations": false,
        "transparent": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
