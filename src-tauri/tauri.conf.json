{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PinIt",
  "version": "0.1.0",
  "identifier": "com.saqla.pin-it",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "PinIt - Always on Top",
        "width": 420,
        "height": 520,
        "resizable": false,
        "maximizable": false,
        "visible": false,
        "decorations": false,
        "transparent": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}